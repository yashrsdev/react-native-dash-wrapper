{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "strict": true, 
    "moduleResolution": "node",
    "target": "ES6",
    "lib": ["es6", "dom"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true, 
    "outDir": "./lib",  
    "declarationDir": "./lib",
  },
  "include": ["src/**/*", "index.js"],
  "exclude": ["node_modules"]
}
